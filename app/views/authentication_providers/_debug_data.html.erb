<% provider.class.debugging_sections.each_with_index do |section_description, index| %>
  <% section_seen = false %>
  <% provider.class.debugging_keys[index].each do |(key, description)| %>
    <% next unless (value = provider.debug_get(key)) %>
    <% if !section_seen && section_description %>
      <% section_seen = true %>
      <h5>
        <%= section_description.call %>
      </h5>
    <% end %>

    <div class="debug_label">
      <%= t("#before_label_wrapper", "%{text}:", text: description.call) %>
    </div>
    <pre><%= value %></pre>
  <% end %>
<% end %>
