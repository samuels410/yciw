<button type="button" class="section-select-button">
  <span class="selected-section">{{currentSection}}</span>
</button>

<ul class="section-select-menu" id="section-to-show-menu">
  {{#each sections}}
    <li>
      <a href="#">
        <label for="section_option_{{id}}">{{{name}}}</label>
        <input id="section_option_{{id}}" type="radio" value="{{id}}" name="section_to_show_radio" {{#if checked}} checked {{/if}} />
      </a>
    </li>
  {{/each}}
</ul>
