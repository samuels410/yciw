<article class="discussion_entry">
  <a href="#"
     class="discussion-read-state-btn"
     role="button"
     title=""
     data-tooltip='{ "position": "top", "collision": "none" }'
     data-event="toggleRead">
    <div class="discussion-read-state tooltip data-tooltip"></div>
  </a>
  <div class="entry-content">
    <header class="entry-header discussion-section">
      {{>avatar author}}
      <div class="discussion-header-content right-of-avatar">
        <div class="discussion-header-right">
          <div class="discussion-title">
            {{>discussions/author_link}}
          </div>
          <div class="discussion-pubdate hide-if-collapsed">{{friendlyDatetime created_at pubdate=true contextSensitive=true}}</div>
        </div>
      </div>
    </header>
    <div class="discussion-section message_wrapper">
      <div class="message user_content">{{convertApiUserContent message}}</div>
      {{#if editor}}
       <div class="discussion-fyi">{{#t "edited_comment"}}Edited by <a href="{{editor_href}}">{{editor.display_name}}</a> on {{edited_at}}{{/t}}</div>
      {{/if}}
      {{#if attachments}}
        <div class="comment_attachments">
          {{#each attachments}}
            <div><a href="{{url}}" class="{{mimeClass content-type}}" title="{{filename}}">{{display_name}}</a></div>
          {{/each}}
        </div>
      {{/if}}
    </div>
    <div class="entry-controls">
      <a href="#entry-{{id}}" class="viewInDiscussion">{{#t "view_in_discussion"}}View in discussion{{/t}}</a>
    </div>
  </div>
</article>
