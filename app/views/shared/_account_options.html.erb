<% indent ||= 0 %>
<option value="<%= account.id %>" <%= "selected" if @context && @context.account_id == account.id %>><%= raw("&nbsp;" * indent) %><%= account.name %></option>
<% account.sub_accounts.order(Account.best_unicode_collation_key('name')).active.each do |a| %>
  <%= render :partial => "shared/account_options", :locals => {:account => a, :indent => indent + 2} %>
<% end %>
